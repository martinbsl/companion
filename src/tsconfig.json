{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node"
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "annotateForClosureCompiler": true
  }
}
